<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovistarKoiApp" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/koi_purple</item>
        <item name="colorPrimaryVariant">@color/koi_dark_blue</item>
        <item name="colorOnPrimary">@color/koi_white</item>
        <item name="colorSecondary">@color/koi_light_blue</item>
        <item name="colorSecondaryVariant">@color/koi_purple</item>
        <item name="colorOnSecondary">@color/koi_white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/koi_dark_blue</item>

        <!-- Agregar estas líneas para deshabilitar la ActionBar por defecto -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Estilo personalizado para el título de la toolbar -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilos para botones -->
    <style name="Widget.MovistarKoiApp.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/koi_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.MovistarKoiApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/koi_purple</item>
        <item name="android:textColor">@color/koi_purple</item>
    </style>

    <style name="Theme.MovistarKoiApp" parent="Base.Theme.MovistarKoiApp" />
</resources>