<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/calendar_background">

    <!-- Header del calendario mejorado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Botón mes anterior con icono -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/prevMonthButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_left"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:backgroundTint="@color/koi_purple"
            app:cornerRadius="24dp"
            style="@style/Widget.Material3.Button.Icon" />

        <!-- Título del mes -->
        <TextView
            android:id="@+id/monthYearText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mes Año"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/calendar_day_text"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Botón mes siguiente con icono -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextMonthButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_right"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:backgroundTint="@color/koi_purple"
            app:cornerRadius="24dp"
            style="@style/Widget.Material3.Button.Icon" />

    </LinearLayout>

    <!-- Días de la semana -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:background="@color/calendar_surface"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="L"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/calendar_weekday_text"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/calendar_weekday_text"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="X"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/calendar_weekday_text"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="J"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/calendar_weekday_text"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="V"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/calendar_weekday_text"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/calendar_weekday_text"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/calendar_weekday_text"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Grid del calendario -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendarRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/calendar_surface"
        android:padding="4dp" />

    <!-- Botones de acción mejorados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <!-- Botón Hoy con icono -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/todayButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Hoy"
            app:icon="@drawable/ic_today"
            app:iconGravity="textStart"
            android:backgroundTint="@color/koi_light_blue"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button" />

        <!-- Botón Sincronizar con icono -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/syncCalendarButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Sincronizar"
            app:icon="@drawable/ic_sync"
            app:iconGravity="textStart"
            android:backgroundTint="@color/koi_purple"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <!-- Estado y progreso -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/calendar_day_text"
        android:layout_margin="16dp"
        android:visibility="gone" />

</LinearLayout>