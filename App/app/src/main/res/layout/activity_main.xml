<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/koi_dark_blue">

    <!-- Header con logo, título y botón atrás -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/koi_dark_gray">

        <!-- Botón atrás (inicialmente invisible) -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/koi_white"
            android:visibility="gone"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Logo placeholder -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/koi_purple"
            android:backgroundTint="@color/koi_purple"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MOVISTAR KOI"
            android:textColor="@color/koi_white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <!-- Icono de notificaciones -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_popup_reminder"
            android:tint="@color/koi_white"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Barra de navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/koi_dark_gray"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@drawable/bottom_nav_colors"
        app:itemTextColor="@drawable/bottom_nav_colors" />

    <!-- Contenedor para fragments -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>