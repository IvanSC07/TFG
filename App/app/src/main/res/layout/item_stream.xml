<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/koi_dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thumbnail del stream -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/streamThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/koi_light_gray"
                android:contentDescription="Thumbnail del stream" />

            <!-- Badge EN DIRECTO -->
            <TextView
                android:id="@+id/streamLiveBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN DIRECTO"
                android:textColor="@color/koi_white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/live_badge_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_margin="12dp" />

            <!-- Plataforma -->
            <ImageView
                android:id="@+id/streamPlatformIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_twitch"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp" />

        </RelativeLayout>

        <!-- Información del stream -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Categoría -->
            <TextView
                android:id="@+id/streamCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFICIAL"
                android:textColor="@color/koi_purple"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/category_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="8dp" />

            <!-- Título -->
            <TextView
                android:id="@+id/streamTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del Stream"
                android:textColor="@color/koi_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/streamDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del stream..."
                android:textColor="@color/koi_light_gray"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="12dp" />

            <!-- Botón Ver Stream -->
            <Button
                android:id="@+id/btnWatchStream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VER STREAM"
                android:textColor="@color/koi_white"
                android:textStyle="bold"
                android:backgroundTint="@color/koi_purple"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>